page {
    font-style: "微软雅黑";
    background-color: #CACBFF;
}

.search {
    width: 100%;
    height: 80rpx;
    background-color: #37225A;
}

.search .search-icon {
    position: absolute;
    top: 10rpx;
    background-image: url("../assets/imgs/create/search.png");
    background-size: 45rpx 45rpx;
    background-repeat: no-repeat;
    background-position: 30rpx;
    width: 90rpx;
    height: 60rpx;
    border-bottom-left-radius: 27rpx;
    border-top-left-radius: 27rpx;
    display: inline-block;
    background-color: #CACCFF;
    margin-left: 90rpx;
}

.search input{
    position: absolute;
    left: 180rpx;
    top: 10rpx;
    display: inline-block;
    width: 400rpx;
    height: 60rpx;
    background-color: #CACCFf;
}

.search .extra {
    position: absolute;
    top: 10rpx;
    width: 60rpx;
    height: 60rpx;
    left: 570rpx;
    border-bottom-right-radius: 27rpx;
    border-top-right-radius: 27rpx;
    display: inline-block;
    background-color: #CACCFF;
}

.content .left{
    position: absolute;
    width: 500rpx;
    background-color: #CACBFF; 
}

.content .right {
    position: absolute;
    right: 0rpx;
    width: 250rpx;
    height: 1150rpx;
    background-color: white;
}

.content .left .tab {
    height: 80rpx;
    width: 500rpx;
    background-color: #898BD8;
    display: flex;
    flex-direction: row;
}

.content .left .tab .single-tab {
    font-size: 30rpx;
    display: inline-block; 
    margin-top: 15rpx;
    width: 125rpx;
    height: 50rpx;
    border-right: 2rpx solid white;
    line-height: 50rpx;
    text-align: center;
}

.content .left .tab .single-tab-last {
    font-size: 30rpx;
    display: inline-block; 
    margin-top: 15rpx;
    width: 125rpx;
    height: 50rpx;
    line-height: 50rpx;
    text-align: center;
}

.content .left .tab-choose {
    position: absolute;
    z-index: 10;
    height: 150rpx;
    width: 500rpx;
    opacity: 0.96;
    background-color: white;
}

.content .left .tab-choose .single-choose {
    display: block;
    font-size: 30rpx;
    float: left;
    margin-top: 10rpx;
    color: black;
    background-color: white;
    width: 128rpx;
    height: 50rpx;
    border-radius: 25rpx;
    border: 2rpx solid #999999;
    line-height: 50rpx;
    text-align: center;
    margin-left: 16rpx;
    margin-right: 16rpx;
    opacity: 0.5;
}

.all-hero {
    display: block;
    width: 500rpx;
    margin-top: 20rpx;
    background-color: #CACBFF;
}

.all-hero .single-hero {
    width: 140rpx;
    display: block;
    margin-left: 13rpx;
    margin-right: 13rpx;
    margin-top: 10rpx;
    float: left;
}

.all-hero .single-hero image {
    width: 140rpx;
    height: 194rpx;
}

.all-hero .single-hero text {
    font-size: 25rpx;
    display: block;
    text-align: center;
    color: #352057;
    width: 140rpx;
    line-height: 40rpx;
    height: 40rpx;
}

.right .sm_hero {
    display: block;
    width: 255rpx;
    height: 80rpx;
}

.right .modeback {
    width: 120rpx;
    height: 70rpx;
    margin-left: 68rpx;
}

.right .mode {
    position: absolute;
    left: 88rpx;
    top: 88rpx;
    color: black;
}