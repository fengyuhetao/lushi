}

.logo {
    width: 100%;
    height: 320rpx;
}

.head {
    width: 105rpx;
    height: 105rpx;
    border-radius: 50%;
    border: 5rpx solid white;
    position: absolute;
    z-index: 10;
    top: 183rpx;
    left: 22rpx;
}
.name-res {
    position: absolute;
    display: block;
    width: 150rpx;
