    background-color: black;
    opacity: 0.11;
}

.banyuan {
    position: absolute;
    display: block;
    width: 108rpx;
    height: 108rpx;
    border-radius: 50%;
    z-index: 8;
    top: 185rpx;
    left: 188rpx;
    background-color: black;
    opacity: 0.1;
}

.nickname {
    display: block;
    margin-top: 10px;
    margin-left: 60rpx;
    font-size: 30rpx;
    color: white;
}

.person-res {
    display: block;
    margin-left: 45rpx;
    margin-top: 10rpx;
    color: white;
    font-size: 2px;
}

.tab text {
    display: inline-block;
    color: white;
    height: 60rpx;
    line-height: 60rpx;
    font-size: 40rpx;
    text-align: center;
    width: 33%;
}
.underline {
    display: block;
    width: 80rpx;
    height: 5rpx;
    background-color: white;
}

.res {
  margin-left: 15rpx;
  display: flex;
  flex-direction: column;
}
.res-view {
  position: relative;
  display: block;
  width: 100%;
  margin-bottom: 20rpx;
  margin-top: 20rpx;
}
.res-image {
  width: 200rpx;
  height: 160rpx;
  float: left;
  margin-right: 20rpx;
  margin-left: 10rpx;
}
.res-title {
  color: white;
  font-size: 30rpx;
}
.res-summary {
  color: #ACA4BC;
  font-size: 25rpx;
}
.res-date {
  color: #ACA4BC;
  font-size: 25rpx;
  position: absolute;
  bottom: 0rpx;
  left: 230rpx;
}
.hr{
    height:2px;
    width: 100%;
    background-color: black;
    border-top: #685195 solid 1px ;
    border-bottom: #685195 solid 1px;
    opacity:0.2;
}
