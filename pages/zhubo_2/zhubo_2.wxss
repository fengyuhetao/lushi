page {
    background-color: #4C3674;
    font-family: "等线";
    font-weight: bold;
}

.head {
    background-color: #372058;
    width: 100%;
    height: 60rpx; 
    line-height: 60rpx;
    color: white;
    text-align: center;
}

.head .title {
    display: inline-block;
}

.head .drop-up { 
    position: absolute;
    top: 20rpx; 
    width: 25rpx;
    height: 15rpx;
    left: 420rpx;
}

.head .drop-down {
    position: absolute;
    top: 25rpx; 
    width: 25rpx;
    height: 15rpx;
    left: 420rpx;
    -webkit-transform: rotateZ(180deg);
    -moz-transform: rotateZ(180deg);
    -o-transform: rotateZ(180deg);
    -ms-transform: rotateZ(180deg);
    transform: rotateZ(180deg);
}

.head .rectangle {
    position: relative;
    background-color: white;
    width: 200rpx;
    margin: 0rpx auto;
    z-index: 10;
    border-radius: 10rpx;
    opacity: 0.85;
    padding-top: 12rpx;
    padding-bottom: 12rpx;
}

.head .rectangle .type{
    color: black;
    font-size: 30rpx;
    line-height: 50rpx;
    width: 140rpx;
    height: 50rpx;
    margin: 13rpx auto 13rpx;
    margin-bottom: 12rpx;
    border: 2rpx solid #999999;
    border-radius: 10rpx;
}

.content {
    margin-top: 30rpx;
}

.content .single-zhubo {
    position: relative;
    width: 300rpx;
    display: block;
    margin-left: 30rpx;
    margin-right: 30rpx;
    margin-top: 10rpx;
    float: left;
}

.content .single-zhubo image {
    width: 332rpx;
    height: 225rpx;
    border-radius: 10rpx;
}

.content .single-zhubo text {
    display: block;
    text-align: center;
    color: white;
    font-size: 30rpx;
    width: 332rpx;
    line-height: 60rpx;
    height: 60rpx;
}

.content .single-zhubo .shuiyin {
    position: absolute;
    width: 100rpx;
    height: 50rpx;
    text-align: center;
    line-height: 50rpx;
    border-radius: 10rpx;
    background-color: black;
    opacity: 0.75;
    left: 20rpx;
    top: 20rpx;
    color: white;
}
